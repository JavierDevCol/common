<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.polaris.cloud</groupId>
    <artifactId>commons</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>polaris_cloud_common</module>
    </modules>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.4.RELEASE</version>
    </parent>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
        <guava.version>23.0</guava.version>
        <swagger.version>2.9.2</swagger.version>
        <log4j.version>1.2.17</log4j.version>
        <jaxb.version>2.2.11</jaxb.version>
        <myMavenRepoWriteUrl>https://mymavenrepo.com/repo/GK8d2t0f0iXTbdWBN5oD/</myMavenRepoWriteUrl>
        <myMavenRepoReadUrl>https://mymavenrepo.com/repo/8wOjWbPUscy5S8AAeTDp/</myMavenRepoReadUrl>
        <converage.test>0.0</converage.test>
        <sonar.credenciales.url>http://qa.wposs.com:8081</sonar.credenciales.url>
        <sonar.credenciales.user>gestionti</sonar.credenciales.user>
        <sonar.credenciales.password>Wposs.2020</sonar.credenciales.password>
    </properties>

    <repositories>
        <repository>
            <id>polaris_cloud</id>
            <url>${myMavenRepoReadUrl}</url>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>polaris_cloud</id>
            <url>${myMavenRepoWriteUrl}</url>
        </repository>

        <snapshotRepository>
            <id>polaris_cloud</id>
            <url>${myMavenRepoWriteUrl}</url>
        </snapshotRepository>
    </distributionManagement>

    <profiles>
        <profile>
            <id>sonar</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <sonar.host.url>${sonar.credenciales.url}</sonar.host.url>
                <sonar.login>${sonar.credenciales.user}</sonar.login>
                <sonar.password>${sonar.credenciales.password}</sonar.password>
            </properties>
        </profile>
    </profiles>

    <dependencies>
        <!-- Polaris -->

        <!-- Sonar -->
        <dependency>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>sonar-maven-plugin</artifactId>
            <version>3.4.0.905</version>
            <type>pom</type>
            <scope>install</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>